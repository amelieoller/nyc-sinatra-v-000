<h1>Edit this figure</h1>
<form action="/figures/<%= @figure.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">

    <label for="figure_name">Figure Name:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
    
    <label>Edit titles:</label>
    <%Title.all.each do |title|%>
      <input type='checkbox' name='figure[title_ids][]' id='' value='<%=title.id%>'
      <%='checked' if @figure.titles.include?(title.id)%>><%=title.name%></input>
    <%end%>
    <br>
    New landmark:<input type='text' name='landmark[name]' id='new_landmark'></input>
    <br>
    <input type='submit' value='Edit Figure'>

</form>